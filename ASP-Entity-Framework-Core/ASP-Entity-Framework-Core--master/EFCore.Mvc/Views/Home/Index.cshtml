@model IEnumerable<EFCore.Domain.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Upsert" asp-controller="Home">Create New</a>
    <a asp-action="AddMultipleRecord2" asp-controller="Home">AddMultipleRecord</a>
    <br />
    <a asp-action="RemoveRange" asp-controller="Home">RemevoRange</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Upsert" asp-controller="Home" asp-route-id="@item.CategoryId">Edit</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.CategoryId">Delete</a>
                    
            </td>
        </tr>
}
    </tbody>
</table>
